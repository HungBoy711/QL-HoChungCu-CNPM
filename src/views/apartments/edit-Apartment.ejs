<body>
    <div class="wrapper">
        <div class="main-header">
            <%- include('../layouts/index.ejs') %>
                <div class="main-panel">
                    <div class="content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-8">
                                    <form action="/edit-Apartment" method="POST">
                                        <div class="card">
                                            <div class="card-header">
                                                <div class="card-title">Sửa thông tin căn hộ</div>
                                            </div>
                                            <div class="card-body">
                                                <div style="display: none;" class="form-group">
                                                    <label>id</label>
                                                    <input name="id" type=" text" class="form-control"
                                                        value="<%= apart.id %>">
                                                </div>
                                                <div class="form-group">
                                                    <label for="ApartID">Số căn hộ</label>
                                                    <input type="text" name="ApartID" class="form-control"
                                                        value="<%= apart.ApartID %>">
                                                </div>
                                                <div class="form-group ">
                                                    <label for="Name">Tầng</label>
                                                    <input type="text" name="Floor" class="form-control"
                                                        value="<%= apart.Floor %>">
                                                </div>
                                                <div class="form-group">
                                                    <label>Trạng thái</label>
                                                    <select class="form-control" name="Status">
                                                        <option>
                                                            <%= apart.Status %>
                                                        </option>
                                                        <option>Đang sử dụng</option>
                                                        <option>Không sử dụng</option>
                                                        <option>Bảo trì</option>
                                                    </select>
                                                </div>
                                                <div class="form-group ">
                                                    <label for="Size">Diện tích</label>
                                                    <input type="text" name="Size" class="form-control"
                                                        value="<%= apart.Size %>">
                                                </div>
                                                <div class="form-group ">
                                                    <label>Tiền nước</label>
                                                    <input type="text" name="WaterFee" class="form-control"
                                                        value="<%= apart.WaterFee %>">
                                                </div>
                                                <div class="form-group ">
                                                    <label for="Phone">Tiền điện</label>
                                                    <input type="text" name="ElectricityFee" class="form-control"
                                                        value="<%= apart.ElectricityFee %>">
                                                </div>
                                            </div>
                                            <div class="card-action">
                                                <button type="submit" class="btn btn-success">Xác nhận</button>

                                                <input class="btn btn-secondary" type="button" value="Hủy"
                                                    onclick="history.back()" />

                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <footer class="footer">
                        <div class="container-fluid">
                            <nav class="pull-left">
                                <ul class="nav">
                                    <li class="nav-item">
                                        <a class="nav-link" href="http://www.themekita.com">
                                            ThemeKita
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">
                                            Help
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">
                                            Licenses
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                            <div class="copyright ml-auto">
                                2018, made with <i class="la la-heart heart text-danger"></i> by <a
                                    href="http://www.themekita.com">ThemeKita</a>
                            </div>
                        </div>
                    </footer>
                </div>
        </div>
    </div>
    </div>
</body>

</html>