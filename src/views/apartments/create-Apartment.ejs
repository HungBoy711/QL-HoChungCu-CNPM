<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <form action="/create-Apartment" method="POST">
                    <div class="card">

                        <div class="card-header">
                            <div class="card-title">Thêm mới căn hộ</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ApartID">Số căn hộ</label>
                                <input type="number" name="ApartID" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Số người ở</label>
                                <input type="number" name="CitizenCount" class="form-control">
                            </div>
                            <div class="form-group ">
                                <label for="Name">Tầng</label>
                                <input type="number" name="Floor" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Trạng thái</label>
                                <select class="form-control" name="Status">
                                    <option>Đang sử dụng</option>
                                    <option>Không sử dụng</option>
                                    <option>Bảo trì</option>
                                </select>
                            </div>
                            <div class="form-group ">
                                <label for="Size">Diện tích</label>
                                <input type="number" name="Size" class="form-control">
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                            <button type="submit" class="btn btn-primary">Xác nhận</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>