<body>
    <%- include('../users/create-User.ejs') %>
        <%- include('../users/delete-User.ejs') %>
            <%- include('../users/edit-User.ejs') %>
                <div class="wrapper">
                    <div class="main-header">
                        <%- include('../layouts/index.ejs') %>
                            <div class="main-panel">
                                <div class="content">
                                    <div class="container-fluid">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                            </div>
                                            <div class="col-md-6 text-right">
                                                <button type="button" class="btn btn-primary" data-toggle="modal"
                                                    data-target="#createUserModal">
                                                    <i class="fa-regular fa-plus"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="card">
                                                    <div class="card-header">
                                                        <div class="card-title">Thông tin người dùng</div>
                                                    </div>
                                                    <div class="card-body">
                                                        <table class="table table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th scope="col" style="display: none;">#</th>
                                                                    <th scope="col">Tên người dùng</th>
                                                                    <th scope="col">Email</th>
                                                                    <th scope="col">Vai trò</th>
                                                                    <th scope="col">Giới tính</th>
                                                                    <th scope="col">Số điện thoại</th>
                                                                    <th scope="col" class="col-2">Chức năng</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% listUsers.forEach(function(user) { %>
                                                                    <tr>
                                                                        <td style="display: none;">
                                                                            <%= user._id %>
                                                                        </td>
                                                                        <td>
                                                                            <%= user.Username %>
                                                                        </td>
                                                                        <td>
                                                                            <%= user.Email %>
                                                                        </td>
                                                                        <td>
                                                                            <%= user.Role %>
                                                                        </td>
                                                                        <td>
                                                                            <%= user.Gender %>
                                                                        </td>
                                                                        <td>
                                                                            <%= user.Phone %>
                                                                        </td>
                                                                        <td style="width: 200px;">
                                                                            <button class="edit-btn" data-toggle="modal"
                                                                                data-target="#editUserModal"
                                                                                data-id="<%= user._id %>"
                                                                                data-username="<%= user.Username %>"
                                                                                data-email="<%= user.Email %>"
                                                                                data-role="<%= user.Role %>"
                                                                                data-gender="<%= user.Gender %>"
                                                                                data-phone="<%= user.Phone %>">
                                                                                <i class="fa-solid fa-pencil"></i>
                                                                            </button>
                                                                            <button class="delete-btn"
                                                                                data-toggle="modal"
                                                                                data-target="#deleteUserModal"
                                                                                data-id="<%= user._id %>"
                                                                                data-username="<%= user.Username %>">
                                                                                <i class="fa-solid fa-trash"></i>
                                                                            </button>
                                                                        </td>
                                                                    </tr>
                                                                    <% }); %>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
</body>
<script src="/js/getDataUser.js"></script>