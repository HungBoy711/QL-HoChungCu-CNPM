<body>
    <div class="wrapper">
        <div class="main-header">
            <%- include('../layouts/index.ejs') %>
                <div class="main-panel">
                    <div class="content">
                        <div class="container-fluid">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                </div>
                                <div class="col-md-6 text-right">
                                    <a class=" btn btn-primary" style="color: white;text-decoration: none;"
                                        href="/create-AssetCatPage"><i class="fa-regular fa-plus"></i></a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <div class="card-title">Thông tin danh mục tài sản</div>
                                        </div>
                                        <div class="card-body">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th scope="col" style="display: none;">#</th>
                                                        <th scope="col">Mã danh mục</th>
                                                        <th scope="col">Tên danh mục </th>
                                                        <th scope="col" class="col-5">Mô tả</th>
                                                        <th scope="col">Chức năng</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% listAssetCats.forEach(function(assetCat) { %>
                                                        <tr>
                                                            <td style=" display: none;">
                                                                <%= assetCat.id %>
                                                            </td>
                                                            <td>
                                                                <%= assetCat.AssetCatID %>
                                                            </td>
                                                            <td>
                                                                <%= assetCat.Name %>
                                                            </td>
                                                            <td>
                                                                <%= assetCat.Description %>
                                                            </td>
                                                            <td style="width: 200px;">
                                                                <a class="btn btn-primary"
                                                                    style="color: white;text-decoration: none; margin-right: 20px; "
                                                                    href="/asset/<%= assetCat.AssetCatID %>">Chi
                                                                    tiết</a>
                                                                <a href="edit-AssetCatPage/<%= assetCat.id %>"><i
                                                                        class="fa-solid fa-pencil"></i></a>
                                                                <a style="margin-left: 20px; color: red;"
                                                                    href="delete-AssetCatPage/<%= assetCat.id %>"><i
                                                                        class="fa-solid fa-trash"></i></a>
                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
        </div>
    </div>
</body>

</html>